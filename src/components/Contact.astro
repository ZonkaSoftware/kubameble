import HeadingTwo from "./ui/HeadingTwo.astro";
import Section from "./ui/Section.astro";
---

<Section id="contact">
  <div class="relative container flex flex-col items-center">
    <HeadingTwo class="text-center" h2="Kontakt" />
    <div class="flex flex-col lg:flex-row justify-between w-full lg:space-x-8">
      <div class="w-full lg:w-1/2">
        <div class="flex items-center mb-6">
          <svg
            width="45"
            height="45"
            viewBox="0 0 45 45"
            fill="none"
            xmlns="http://www.w3.org/2000/svg"
          >
            <path
              d="M41.25 31.7249V37.3499C41.2521 37.8721 41.1452 38.389 40.936 38.8675C40.7268 39.3459 40.4199 39.7754 40.0351 40.1284C39.6504 40.4815 39.1961 40.7502 38.7014 40.9175C38.2067 41.0848 37.6826 41.1469 37.1625 41.0999C31.3928 40.473 25.8506 38.5015 20.9812 35.3437C16.4509 32.4649 12.61 28.624 9.73125 24.0937C6.56246 19.2022 4.59045 13.6331 3.975 7.83744C3.92814 7.31894 3.98976 6.79636 4.15593 6.30298C4.32211 5.8096 4.58919 5.35623 4.94018 4.97173C5.29117 4.58722 5.71838 4.28002 6.1946 4.06967C6.67083 3.85931 7.18564 3.75043 7.70625 3.74994H13.3312C14.2412 3.74098 15.1234 4.06321 15.8133 4.65656C16.5032 5.24991 16.9539 6.0739 17.0812 6.97494C17.3187 8.77506 17.759 10.5426 18.3937 12.2437C18.646 12.9148 18.7006 13.6442 18.5511 14.3453C18.4015 15.0465 18.0541 15.6901 17.55 16.1999L15.1687 18.5812C17.8379 23.2753 21.7246 27.162 26.4187 29.8312L28.8 27.4499C29.3098 26.9458 29.9534 26.5984 30.6546 26.4489C31.3558 26.2993 32.0851 26.3539 32.7562 26.6062C34.4574 27.241 36.2249 27.6813 38.025 27.9187C38.9358 28.0472 39.7676 28.5059 40.3622 29.2077C40.9569 29.9095 41.2728 30.8054 41.25 31.7249Z"
              stroke="#2B2A28"
              stroke-width="4"
              stroke-linecap="round"
              stroke-linejoin="round"></path>
          </svg>

          <div class="flex flex-col justify-center ml-4">
            <h4 class="font-black text-main">Telefon</h4>
            <a class="font-bold text-xl md:text-2xl" href="#">+48 736 406 807</a
            >
          </div>
        </div>

        <div class="flex items-center mb-6">
          <svg
            width="52"
            height="49"
            viewBox="0 0 52 49"
            fill="none"
            xmlns="http://www.w3.org/2000/svg"
          >
            <path
              d="M43 8.48071H8.33333C5.9401 8.48071 4 10.3089 4 12.564V37.064C4 39.3192 5.9401 41.1474 8.33333 41.1474H43C45.3932 41.1474 47.3333 39.3192 47.3333 37.064V12.564C47.3333 10.3089 45.3932 8.48071 43 8.48071Z"
              stroke="#2B2A28"
              stroke-width="4"
              stroke-linecap="round"
              stroke-linejoin="round"></path>
            <path
              d="M47.6667 14.2917L28.2317 25.9292C27.5627 26.3242 26.7893 26.5336 26 26.5336C25.2106 26.5336 24.4372 26.3242 23.7683 25.9292L4.33333 14.2917"
              stroke="#2B2A28"
              stroke-width="4"
              stroke-linecap="round"
              stroke-linejoin="round"></path>
          </svg>

          <div class="flex flex-col justify-center ml-4">
            <h4 class="font-black text-main">Email</h4>
            <a class="font-bold text-xl md:text-2xl" href="#"
              >plewameble@gmail.com</a
            >
          </div>
        </div>

        <div class="flex items-center mb-6">
          <svg
            width="51"
            height="51"
            viewBox="0 0 51 51"
            fill="none"
            xmlns="http://www.w3.org/2000/svg"
          >
            <path
              d="M42.5 21.25C42.5 34 25.5 46.75 25.5 46.75C25.5 46.75 8.5 34 8.5 21.25C8.5 16.7413 10.2911 12.4173 13.4792 9.22918C16.6673 6.04107 20.9913 4.25 25.5 4.25C30.0087 4.25 34.3327 6.04107 37.5208 9.22918C40.7089 12.4173 42.5 16.7413 42.5 21.25Z"
              stroke="#2B2A28"
              stroke-width="4"
              stroke-linecap="round"
              stroke-linejoin="round"></path>
            <path
              d="M25.5 27.625C29.0208 27.625 31.875 24.7708 31.875 21.25C31.875 17.7292 29.0208 14.875 25.5 14.875C21.9792 14.875 19.125 17.7292 19.125 21.25C19.125 24.7708 21.9792 27.625 25.5 27.625Z"
              stroke="#2B2A28"
              stroke-width="4"
              stroke-linecap="round"
              stroke-linejoin="round"></path>
          </svg>

          <div class="flex flex-col justify-center ml-4">
            <h4 class="font-black text-main">Adres</h4>
            <a class="font-bold text-xl md:text-2xl" href="#"
              >Kowalewo Pomorskie, Odrodzenia 22</a
            >
          </div>
        </div>

        <div class="flex items-center mb-10">
          <svg
            width="56"
            height="56"
            viewBox="0 0 56 56"
            fill="none"
            xmlns="http://www.w3.org/2000/svg"
          >
            <path
              d="M47.25 7H19.25C18.7859 7 18.3408 7.18437 18.0126 7.51256C17.6844 7.84075 17.5 8.28587 17.5 8.75V17.5H8.75C8.28587 17.5 7.84075 17.6844 7.51256 18.0126C7.18437 18.3408 7 18.7859 7 19.25V47.25C7 47.7141 7.18437 48.1592 7.51256 48.4874C7.84075 48.8156 8.28587 49 8.75 49H36.75C37.2141 49 37.6593 48.8156 37.9874 48.4874C38.3156 48.1592 38.5 47.7141 38.5 47.25V38.5H47.25C47.7141 38.5 48.1592 38.3156 48.4874 37.9874C48.8156 37.6593 49 37.2141 49 36.75V8.75C49 8.28587 48.8156 7.84075 48.4874 7.51256C48.1592 7.18437 47.7141 7 47.25 7ZM35 45.5H10.5V21H35V45.5ZM45.5 35H38.5V19.25C38.5 18.7859 38.3156 18.3408 37.9874 18.0126C37.6593 17.6844 37.2141 17.5 36.75 17.5H21V10.5H45.5V35Z"
              fill="#2B2A28"></path>
          </svg>

          <div class="flex flex-col justify-center ml-4">
            <h4 class="font-black text-main">NIP</h4>
            <p class="font-bold text-xl md:text-2xl">5030089148</p>
          </div>
        </div>
      </div>
      <div class="w-full lg:w-1/2">
        <form
          class="flex flex-col"
          action="https://formsubmit.co/plewameble@gmail.com"
          method="POST"
        >
          <input
            class="bg-main border-2 border-second rounded-md placeholder-second px-4 py-2 mb-6 focus:outline-none focus:ring focus:ring-main"
            type="text"
            required
            name="Imię"
            placeholder="Imię *"
          />
          <input
            class="bg-main border-2 border-second rounded-md placeholder-second px-4 py-2 mb-6 focus:outline-none focus:ring focus:ring-main"
            type="text"
            name="Nazwisko"
            placeholder="Nazwisko *"
            required
          />
          <input
            class="bg-main border-2 border-second rounded-md placeholder-second px-4 py-2 mb-6 focus:outline-none focus:ring focus:ring-main"
            type="text"
            name="Numer telefonu"
            placeholder="Numer telefonu"
          />
          <input
            class="bg-main border-2 border-second rounded-md placeholder-second px-4 py-2 mb-6 focus:outline-none focus:ring focus:ring-main"
            type="email"
            required
            name="Email"
            placeholder="Email *"
          />
          <textarea
            class="bg-main border-2 border-second rounded-md placeholder-second px-4 py-2 mb-6 focus:outline-none focus:ring focus:ring-main"
            placeholder="Wiadomość *"
            name="Wiadomość"
            required></textarea>
          <input
            class="bg-main border-2 border-second rounded-md placeholder-second px-4 py-2 w-min self-end cursor-pointer mb-10 md:mb-0 hover:"
            type="submit"
            value="Wyślij"
          />
        </form>
      </div>
    </div>
  </div>
</Section>
